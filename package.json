{
  "name": "rnb",
  "version": "0.0.1",
  "private": true,
  "homepage": "https://ethanneff.github.io/react-native-boilerplate",
  "devDependencies": {
    "@commitlint/cli": "^5.2.0",
    "@commitlint/config-angular": "^5.1.1",
    "coveralls": "^3.0.0",
    "gh-pages": "^1.1.0",
    "husky": "^0.14.3",
    "jest-expo": "^23.0.1",
    "lint-staged": "^6.0.0",
    "prettier": "^1.8.2",
    "react-devtools": "^3.0.0",
    "react-scripts": "^1.0.17",
    "react-test-renderer": "^16.2.0",
    "remote-redux-devtools": "^0.5.12"
  },
  "scripts": {
    "start": "react-native start",
    "android": "react-native run-android",
    "ios": "react-native run-ios",
    "web": "react-scripts start",
    "build": "react-scripts build",
    "commitmsg": "commitlint -e $GIT_PARAMS",
    "precommit": "lint-staged",
    "predeploy": "npm run web:build",
    "deploy": "gh-pages -d build",
    "test": "node node_modules/.bin/jest --coverage && cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js",
    "testing": "node node_modules/jest/bin/jest.js --watch"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,json,css}": [
      "prettier --write",
      "git add"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-angular"
    ]
  },
  "jest": {
    "preset": "react-native",
    "transformIgnorePatterns": [
      "node_modules/(?!react-native|react-router-native)/"
    ],
    "testEnvironment": "jsdom"
  },
  "babel": {
    "presets": [
      "react-native"
    ],
    "env": {
      "development": {
        "plugins": [
          "transform-react-jsx-source"
        ]
      }
    }
  },
  "dependencies": {
    "prop-types": "^15.6.0",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-native": "^0.51.0",
    "react-native-web": "^0.1.14",
    "react-redux": "^5.0.6",
    "react-router-dom": "^4.2.2",
    "react-router-native": "^4.2.0",
    "react-router-redux": "^5.0.0-alpha.8",
    "redux": "^3.7.2",
    "redux-thunk": "^2.2.0"
  }
}
